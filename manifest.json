{
    "name": "FB UID Saver",
    "description": "Save FB UID in group for ahaplus broadcast messaging",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "key": "fbsv",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "/img/favicon.png"
    },
    "icons": {
        "16": "/img/favicon.png",
        "32": "/img/favicon.png",
        "48": "/img/favicon.png",
        "128": "/img/favicon.png"
    },
    "content_scripts": [{
        "matches": ["*://www.facebook.com/*"],
        "js": ["contentScript.js"]
    }],
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://script.google.com/*"
    ],
    "web_accessible_resources": [{
        "resources": ["/img/marker.png", "jquery-3.6.0.slim.min.js", "internal.js", "fb-uid-saver.css","index-min.js"],
        "matches": ["*://www.facebook.com/*"]
    }],
    "externally_connectable": {
        "matches": ["*://www.facebook.com/*"]
    }
}